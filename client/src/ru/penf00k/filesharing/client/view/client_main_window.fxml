<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.penf00k.filesharing.client.controller.ClientMainWindowController">
   <bottom>
      <ButtonBar buttonMinWidth="0.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#connect" text="Ð¡onnect" />
            <Button fx:id="btnDisconnect" mnemonicParsing="false" onAction="#disconnect" text="Disconnect" />
            <Button fx:id="btnPickFile" mnemonicParsing="false" onAction="#selectFile" text="Select File" />
            <Button fx:id="btnSendFile" mnemonicParsing="false" onAction="#sendFile" text="Send File" />
        </buttons>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane prefWidth="400.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="195.0" minWidth="10.0" prefWidth="145.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="273.0" minWidth="10.0" prefWidth="255.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Login" />
                  <Label text="Password" GridPane.rowIndex="1" />
                  <Label text="Server IP address" GridPane.rowIndex="2" />
                  <Label text="Port" GridPane.rowIndex="3" />
                  <TextField fx:id="tfLogin" GridPane.columnIndex="1" />
                  <TextField fx:id="tfPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="tfIPAddress" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="tfPort" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="File path" GridPane.rowIndex="4" />
                  <Label fx:id="lblPathToFile" text="path" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
